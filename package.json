{
  "name": "todo-simple-app",
  "homepage": "https://mikolertesx.github.io/mern-todo",
  "version": "1.0.0",
  "description": "ToDo App",
  "main": "index.js",
  "scripts": {
    "start-frontend": "cd frontend && npm start",
    "start-backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "deploy-heroku":"heroku git:remote -a mikolertesx-simple-todos",
    "deploy": "cd frontend && gh-pages -d build",
    "predeploy": "cd frontend && npm run build"
  },
  "author": "Miguel Angel Guerrero Salinas",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "gh-pages": "^3.1.0"
  }
}
